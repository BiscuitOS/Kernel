#
# Common scheduler
#

menu "Task scheduler"

config TESTCASE_SCHED
	bool "Test Task scheduler"
	help
	  Basic task scheduler

if TESTCASE_SCHED

config TESTCASE_GDT
	bool "Test Global Descriptor Table(GDT)"
	help
	  Debug Global Descriptor Table.

config TESTCASE_SEGMENT
	bool "Test Segment (CS, SS, DS, FS, GS, ES)"
	select TESTCASE_GDT
	help
	  Debug Segment such as CS, SS, DS, FS, GS and ES.

config TESTCASE_GATE
	bool "Test System descriptors"
	select TESTCASE_GDT
	help
	  Debug system descritpor on GDT or LDT

endif

endmenu
